[alias]
  co = checkout
  ci = commit
  st = status -s
  br = branch
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p
  
  touch = commit -m 'No git changes' --allow-empty
  
  pr   = town new-pull-request
  sync = town sync
  hack = town hack

